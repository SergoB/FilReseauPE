{% extends 'expert/expertHome.html.twig' %}



{% block body %}
<section>
  <h3>Liste des post-its actuellement sur la page d'accueil : </h3>

  <table class="table table-bordered">
    <tr>
      <td>N°</td>
      <td>Titre</td>
      <td>Question</td>
      <td>Réponse</td>
      <td>Actions</td>
    </tr>

    {% for postit in postits %}
    <tr>
      <td>{{postit.id}}</td>
      <td>{{postit.titre}}</td>
      <td>{{postit.questionType}}</td>
      <td>{{postit.reponseType}}</td>
      <td>
        <a href="expertPostits.php?choix=edit&amp;id_postit={{postit.id}}">
          <button type="button" class="btn btn-primary" name="button">Modifier</button>
        </a>

        <a href="expertPostits.php?choix=delete&amp;id_postit={{postit.id}}">
          <button type="button" class="btn btn-danger" name="button">Supprimer</button>
        </a>
      </td>
    </tr>
    {% endfor %}
  </table>

  <h3>Rechercher une demande :</h3>

  <form class="form-inline" action="expertPostits.php" method="post">
    <input type="text" name="id_demande" class="form-control" size="25" placeholder="Recherche par n° de demande">

    <input type="text" name="keyword" class="form-control" placeholder="Recherche par mots clés">

    <select class="form-control" name="theme">
      <option value="indifferent">Tous les thèmes</option>
      {% for theme in themes %}
      <option value="{{theme.id}}">{{theme.libelle}}</option>
      {% endfor %}
    </select>

    <input type="submit" class="btn btn-default" name="validerRecherche" value="Rechercher">
  </form>

  <hr>

  {% if POST.validerRecherche is not empty %}
  <h2>Résultat de la recherche :</h2>
    {% if demandesRecherches is empty %}
      <h4>Aucun réstultat ne correspond à votre recherche</h4>
    {% else %}
    <table class="table table-bordered">
      <tr class="bg-primary">
        <td>N°</td>
        <td>Theme</td>
        <td>Etat</td>
        <td>Date</td>
        <td>Actions</td>
      </tr>

      {% for demande in demandesRecherches %}
      <tr>
        <td>{{demande.id}}</td>
        <td>{{demande.libelleTheme}}</td>
        <td>{{demande.etatDemande}}</td>
        <td>{{demande.datePost|date('d/m/Y à H:i')}}</td>
        <td>
          <a href="expertDemande.php?id_demande={{demande.id}}">
            <button type="button" class="btn btn-success" name="button">Consulter</button>
          </a>
        </td>
      </tr>
      {% endfor %}

    </table>
    {% endif %}
  {% endif %}
</section>
{% endblock %}
